[Unit]
Description=Beocreate 2 Server, (c) 2017-2019 Bang & Olufsen
Documentation=https://github.com/bang-olufsen/create/
After=network.target sigmatcp.service

[Service]
Type=simple
ExecStartPre=/bin/sleep 4
ExecStart=/usr/local/bin/node /home/pi/beo-system/beo-server.js
WorkingDirectory=/home/pi/
User=root
Restart=on-failure
RestartSec=10s
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=beocreate2

[Install]
WantedBy=multi-user.target